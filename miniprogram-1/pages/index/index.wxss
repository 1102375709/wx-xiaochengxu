/**index.wxss**/
page{
    display: flex;
    flex-direction: column;
    height: 100%;
}
view{
    box-sizing: border-box;
}
/**搜索栏**/
.ui-searchbar{
    position: relative;
    padding: 8px 10px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    background-color: #ffffff;
    border-top: 1rpx solid #ffffff;
    border-bottom: 1rpx solid #ffffff;
}
.ui-icon-search_inbox{
    position: absolute;
    left: 10px;
    top: 7px;
}
.ui-searchbar_form{
    position: relative;
    -webkit-box-flex: z;
    -webkit-flex:auto;
            flex:auto;
    border-radius: 30px;
    background: #ffffff;
    border: 1rpx solid #E6E6EA;
}
.ui-searchbar_box{
    position: relative;
    padding-left: 30px;
    padding-right: 30px;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
}
.ui-searchbar_input{
    height: 28px;
    line-height: 28px;
    font-size: 14px;
}
.ui-searchbar_cancelbtn{
    margin-left: 10px;
    line-height: 29px;
    color: #ffffff;
    font-size: 14px;
    background: #FF0000;
    white-space: nowrap;
    border-radius: 30px;
    padding: 0rpx 20rpx;
}
/**字体**/
.font{
    font-weight: 900;
    font-size: 17px;
    line-height: 34px;
}
/**页面**/
.ui-tabcontent {
    padding-top: 2rpx;
    text-align: center;
    font-size: 32rpx;
}
/**导航栏**/
.nav {
    position: relative;
    height: 86rpx;
    text-align: center;
    color: #A8A8A8;
    font-size: 4vw;
    background-color: #FFF;
    border-bottom: 1rpx solid #DFDFDF;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    white-space: nowrap;
    top: auto;
    left: auto;
    z-index: 1;
}
.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
}
.nav-item.active {
    transition: all 0.3s;
    border-bottom: 10rpx solid #478ff3;
    color: #478ff3;
}
/**图片滚动播放**/
.images{
    height: 300rpx;
}
.images-container swiper{
    position: relative;
    width: 100%;
    height: 300rpx;
    margin-top: 0rpx;
}
/**分类栏**/
.nav1{
    position: relative;
    width: 100%;
    top: 0px;
    height: 0px;
    padding: 0px;
    box-sizing: border-box;
}
.nav1_items{
    float: left;
    width: 20%;
    height: 70px;
    text-align: center;
}
.nav1_items image{
    width: 45px;
    height: 45px;
    margin-top: 15px;
}
/**分类栏**/
.nav2{
    position: relative;
    width: 100%;
    height: 100px;
    padding: 0px;
    top: 160px;
    box-sizing: border-box;
}
.nav2_items{
    float: left;
    width: 25%;
    height: 70px;
    text-align: center;
}
.nav2_items image{
    width: 80px;
    height: 80px;
}
/**秒杀**/
.box{
    position: relative;
    top: 200px;
    display: flex;
    width: 100%;
    padding: 15px;
}
.box1{
    margin-left: 115px;
    color: #FF0000;
}
.arrow{
    width: 8px;
    height: 8px;
    border-top: 2px solid #FF0000;       
    border-right: 2px solid #FF0000;
    position: absolute; 
    right: 20rpx;  
    transform: rotate(45deg); 
    margin-top:10rpx; 
}
/**倒计时**/
.txt-time{
    background-color: #FF0000;
    color: #FFF;
    border-radius: 15rpx;
    font-size: 30rpx;
    margin: 0 4rpx;
    height: 40rpx;
    width: 40rpx;
    line-height: 42rpx;
    text-align: center;
}
/**秒杀物品**/
.goods{
    position: relative;
    height: 160rpx; 
    width: 100%;
    display: flex;
    display: -webkit-box;
} 
.goods_item{ 
    width: 160rpx;
    height: 160rpx;
    background-color:red;
    margin-right: 10rpx;
} 
